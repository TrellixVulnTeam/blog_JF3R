<div class="mt-4">
    <h3>Cập nhật sách sách</h3>
    <form method="POST" action ="/books/{{book._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sách</label>
            <input type="text" class="form-control" value="{{book.name}}" id="name" name = "name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name = "description">{{book.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{book.videoId}}" id="videoId" name = "videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{book.level}}" id="level" name = "level">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật sách sách</button>
    </form>
</div>