<div class="mt-4">
    <div class="row">

        {{#each books}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item">
                <a href="/books/{{this.slug}}">
                    <img class="card-img-top" style="height: 20rem;" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                <a href="/books/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                    <p class="card-text" style="height: 12rem;">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua s√°ch</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>